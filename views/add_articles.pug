extends layout
block content
    h1 #{title}
    form(method="POST",action="/articles/add")
      .form-group
        //-this is boostrap class. you can review the mark up in the client's console 
        label Title:
        input.form-control(name="title",type="text")
      .form-group
        label body:
        textarea.form-control(name="body")
      br
      input.btn.btn-primary(type="submit",value="Submit")    
      //-#form-group/.form-control.btn etc is boostrap's class
          
